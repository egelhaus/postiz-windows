<Page x:Class="PostizConfigurator.InitialSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Initial Setup">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">
            <!-- Header -->
            <TextBlock Text="Postiz Initial Setup" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,30"
                      Foreground="#2C3E50"/>
            
            <!-- Setup method selection -->
            <Border Background="#F8F9FA" 
                   BorderBrush="#E9ECEF" 
                   BorderThickness="1" 
                   CornerRadius="5" 
                   Padding="20" 
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Choose Setup Method" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,15"
                              Foreground="#2C3E50"/>
                    
                    <!-- Docker option -->
                    <Border Background="White" 
                           BorderBrush="#DEE2E6" 
                           BorderThickness="1" 
                           CornerRadius="3" 
                           Padding="15" 
                           Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="🐳 Docker Setup (Recommended)" 
                                      FontSize="14" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,0,5"/>
                            <TextBlock Text="Automatically installs and manages Postiz using Docker containers." 
                                      FontSize="12" 
                                      Foreground="#6C757D" 
                                      Margin="0,0,0,10"/>
                            
                            <TextBlock Name="DockerStatusText" 
                                      Text="Checking Docker status..." 
                                      FontSize="12" 
                                      Margin="0,0,0,10"/>
                            
                            <TextBlock Name="DockerInstructionsText" 
                                      Text="" 
                                      FontSize="12" 
                                      Foreground="#6C757D" 
                                      TextWrapping="Wrap" 
                                      Margin="0,0,0,10"/>
                            
                            <StackPanel Orientation="Horizontal">
                                <Button Name="DockerSetupButton" 
                                       Content="Setup with Docker" 
                                       Width="150" 
                                       Height="35" 
                                       Margin="0,0,10,0"
                                       Click="DockerSetupButton_Click"
                                       Style="{StaticResource PrimaryButtonStyle}"/>
                                <Button Name="RefreshStatusButton" 
                                       Content="Refresh Status" 
                                       Width="120" 
                                       Height="35"
                                       Click="RefreshStatusButton_Click"
                                       Style="{StaticResource SecondaryButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Manual option -->
                    <Border Background="White" 
                           BorderBrush="#DEE2E6" 
                           BorderThickness="1" 
                           CornerRadius="3" 
                           Padding="15">
                        <StackPanel>
                            <TextBlock Text="⚙️ Manual Setup" 
                                      FontSize="14" 
                                      FontWeight="SemiBold" 
                                      Margin="0,0,0,5"/>
                            <TextBlock Text="Manually configure Postiz installation. (Not yet implemented)" 
                                      FontSize="12" 
                                      Foreground="#6C757D" 
                                      Margin="0,0,0,10"/>
                            
                            <Button Name="ManualSetupButton" 
                                   Content="Manual Setup" 
                                   Width="150" 
                                   Height="35" 
                                   IsEnabled="False"
                                   Click="ManualSetupButton_Click"
                                   Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Status area -->
            <Border Background="#F8F9FA" 
                   BorderBrush="#E9ECEF" 
                   BorderThickness="1" 
                   CornerRadius="5" 
                   Padding="20">
                <StackPanel>
                    <TextBlock Text="Setup Status" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,10"
                              Foreground="#2C3E50"/>
                    
                    <ProgressBar Name="ProgressBar" 
                                Height="10" 
                                IsIndeterminate="True" 
                                Visibility="Collapsed" 
                                Margin="0,0,0,10"/>
                    
                    <TextBlock Name="StatusText" 
                              Text="Ready for setup" 
                              FontSize="12" 
                              Foreground="#6C757D"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
